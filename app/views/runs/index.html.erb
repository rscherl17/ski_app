<div class="page-header">
  <h1>
    Runs
    <a href="/runs/new" class="btn btn-lg btn-success">New Run</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Mountain</th>
        <th>Actions</th>
      </tr>

      <% @runs.each do |run| %>
      <tr>
        <td><%= run.mountain.location %></td>
        <td>
          <a href="/runs/<%= run.id %>" class="btn btn-primary">Show</a>
          <a href="/runs/<%= run.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_run/<%= run.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @runs, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
