<!-- Validation failure messages -->
<% if @run.errors.any? %>
  <% @run.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Run</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_run" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for mountain_id -->
      <div class="form-group">
        <label for="mountain_id" class="control-label">
          Mountain
        </label>

        <%= select_tag(:mountain_id, options_from_collection_for_select(Mountain.all, :id, :location, @run.mountain_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Run
      </button>
      or
      <a href="/runs">Cancel</a>
    </form>
  </div>
</div>
